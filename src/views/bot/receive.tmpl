                              <pre class="text-xs bg-white p-2 rounded border overflow-x-auto"><code>{{ .Debug.Info | printf "%+v" }}</code></pre>
                            </div>
                          {{ end }}
                        
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {{ end }}

