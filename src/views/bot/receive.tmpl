                </span>
              {{ end }}
              {{ if .TrackId }}
                <span class="flex items-center">
                  <i class="fas fa-route mr-1"></i>
                  Track ID: {{ .TrackId }}
                </span>
              {{ end }}
              {{ if .InReply }}
