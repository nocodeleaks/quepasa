            <div class="flex flex-wrap gap-4 text-sm text-gray-500 dark:text-gray-400">
              {{ if eq .Status "read" }}
                <span class="flex items-center">
                  <i class="fas fa-info-circle mr-1"></i>
                  Status: Read
                </span>
              {{ else if eq .Status "delivered" }}
